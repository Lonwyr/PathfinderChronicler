<mvc:View xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          controllerName="com.lonwyr.PfsChronicleFiller.controller.MaintainData"
          xmlns:semantic="sap.f.semantic">
    <semantic:SemanticPage id="page">
        <semantic:titleHeading>
            <Title
                    id="masterHeaderTitle"
                    text="{i18n>loadCharacterTitle}"/>
        </semantic:titleHeading>
        <semantic:content>
            <VBox width="100%" >
                <List
                        headerText="{i18n>eventsTitle}"
                        items="{data>/events}" >
                    <StandardListItem title="{data>name}" description="{data>id}" type="Navigation" press=".onEventPressed" />
                </List>
                <List
                        headerText="{i18n>playersTitle}"
                        items="{data>/players}" >
                    <StandardListItem title="{data>name}" description="{data>id}" type="Navigation" press=".onPlayerPressed" />
                </List>
            </VBox>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>