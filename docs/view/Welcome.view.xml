<mvc:View xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:core="sap.ui.core"
          controllerName="com.lonwyr.PathfinderChronicler.controller.Welcome" >
    <Page
            floatingFooter="true"
            titleAlignment="Center"
            title="{i18n>info}">

        <Text
                text="{i18n>welcome}"
                class="sapUiMediumMarginBegin sapUiMediumMarginEnd sapUiMediumMarginTop" />
        <MessageStrip
                text="{i18n>providePdf}"
                showIcon="true"
                class="sapUiMediumMargin" />
        <MessageStrip
                text="{i18n>noDataStored}"
                type="Warning"
                showIcon="true"
                class="sapUiMediumMargin" />

        <footer>
            <core:Fragment fragmentName="com.lonwyr.PathfinderChronicler.fragments.NavigationFooter" type="XML" />
        </footer>
    </Page>
</mvc:View>